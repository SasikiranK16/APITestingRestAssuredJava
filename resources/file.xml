<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN_DEV">%d{HH:mm:ss.SSS} [%t] %-5level %c{1} - %msg%n</Property>
        <Property name="LOG_PATTERN_PROD">%d{ISO8601} [%t] %-5level %c{1} - %msg%n</Property>
        <Property name="LOG_DIR">logs</Property>
    </Properties>

    <Appenders>
        <!-- Development Console Appender with colors -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%d{HH:mm:ss.SSS}}{cyan} %highlight{%-5level} %style{[%t]}{magenta} %style{%c{1}}{yellow} - %msg%n"/>
        </Console>

        <!-- Production Console Appender -->
        <Console name="ProdConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN_PROD}"/>
        </Console>

        <RollingFile name="File" 
                    fileName="${LOG_DIR}/app.log"
                    filePattern="${LOG_DIR}/app-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN_PROD}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <!-- Use different appenders based on environment -->
            <If condition='$${env:ENVIRONMENT}.equals("development")'>
                <Then>
                    <AppenderRef ref="Console"/>
                </Then>
                <Else>
                    <AppenderRef ref="ProdConsole"/>
                </Else>
            </If>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>